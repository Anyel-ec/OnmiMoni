# Database Configuration
BD_USERNAME=example_user # Database username
BD_PASSWORD=example_password # Database password

# Security Configuration
SECRET_KEY_AES=abc1234567890def1234567890ghi123 # AES secret key for encryption, should be a 32-byte random string
SECRET_KEY_JWT=xyz1234567890abc1234567890def456 # JWT secret key, should be randomly generated
PUBLIC_KEY_RSA= # RSA public key in PEM format
PRIVATE_KEY_RSA= # RSA private key in PEM format
